<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:background="@color/green"
                android:layout_height="50dp">

                <ImageView android:src="@mipmap/goback"
                    android:layout_width="40dp"
                    android:id="@+id/back_btn"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_height="40dp"></ImageView>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:background="@drawable/corners_bg"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="40dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginRight="40dp"
                    android:layout_height="31dp">
                    <ImageView android:src="@mipmap/homesearch"
                        android:layout_width="15dp"
                        android:id="@+id/home_search_btn"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="8dp"
                        android:layout_marginLeft="5dp"
                        android:layout_height="15dp"></ImageView>

                    <EditText
                        android:layout_toRightOf="@+id/home_search_btn"
                        android:layout_marginLeft="8dp"
                        android:id="@+id/inputText"
                        android:background="@null"
                        android:textSize="12dp"
                        android:layout_marginRight="50dp"
                        android:hint="Search Address,City or Zip"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                    <ImageView android:src="@mipmap/homesearchgo"
                        android:layout_width="20dp"
                        android:id="@+id/searchgo"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="5dp"
                        android:layout_height="match_parent"></ImageView>

                </RelativeLayout>
                <RelativeLayout
                    android:layout_marginTop="10dp"
                    android:layout_alignParentRight="true"
                    android:layout_width="40dp"
                    android:background="@color/green"
                    android:orientation="horizontal"
                    android:layout_height="30dp">

                    <ImageView android:src="@mipmap/map_white"
                        android:id="@+id/goMapBtn"
                        android:layout_centerInParent="true"
                        android:layout_width="20dp"
                        android:layout_height="match_parent"></ImageView>

                </RelativeLayout>
            </RelativeLayout>
            <LinearLayout
                android:background="@color/green"
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <RelativeLayout
                    android:background="@color/green"
                    android:layout_width="fill_parent"
                    android:layout_weight="1"

                    android:layout_height="50dp">

                    <RelativeLayout
                        android:layout_centerInParent="true"
                        android:background="@color/green"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp">

                        <TextView
                            android:id="@+id/house_fitle_type_title"
                            android:layout_width="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_height="wrap_content"
                            android:text="类型"
                            android:textColor="@color/white"
                            android:layout_centerHorizontal="true"
                            android:textSize="12dp"
                            />

                        <ImageView
                            android:layout_marginTop="15dp"
                            android:id="@+id/house_fitle_type_img"
                            android:layout_toRightOf="@+id/house_fitle_type_title"
                            android:layout_centerVertical="true"
                            android:layout_width="12dp"
                            android:layout_marginLeft="3dp"
                            android:layout_height="4dp"
                            android:scaleType="fitXY"
                            android:src="@mipmap/down_white"></ImageView>

                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_width="1dp"
                        android:background="@color/white"
                        android:layout_height="20dp">
                    </RelativeLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:background="@color/green"
                    android:layout_width="fill_parent"
                    android:layout_weight="1"
                    android:layout_height="50dp">
                    <RelativeLayout
                        android:layout_centerInParent="true"
                        android:background="@color/green"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp">

                        <TextView
                            android:id="@+id/house_fitle_price_title"
                            android:layout_width="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_height="wrap_content"
                            android:text="价格"
                            android:textColor="@color/white"
                            android:layout_centerHorizontal="true"
                            android:textSize="12dp"
                            />

                        <ImageView
                            android:layout_marginTop="15dp"
                            android:id="@+id/house_fitle_price_img"
                            android:layout_toRightOf="@+id/house_fitle_price_title"
                            android:layout_centerVertical="true"
                            android:layout_width="12dp"
                            android:layout_marginLeft="3dp"
                            android:layout_height="4dp"
                            android:scaleType="fitXY"
                            android:src="@mipmap/down_white"></ImageView>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_width="1dp"
                        android:background="@color/white"
                        android:layout_height="20dp">
                    </RelativeLayout>
                </RelativeLayout>


                <RelativeLayout
                    android:background="@color/green"
                    android:layout_width="fill_parent"
                    android:layout_weight="1"
                    android:layout_height="50dp">
                    <RelativeLayout
                        android:layout_centerInParent="true"
                        android:background="@color/green"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp">

                        <TextView
                            android:id="@+id/house_fitle_area_title"
                            android:layout_width="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_height="wrap_content"
                            android:text="面积"
                            android:textColor="@color/white"
                            android:layout_centerHorizontal="true"
                            android:textSize="12dp"
                            />

                        <ImageView
                            android:layout_marginTop="15dp"
                            android:id="@+id/house_fitle_area_img"
                            android:layout_toRightOf="@+id/house_fitle_area_title"
                            android:layout_centerVertical="true"
                            android:layout_width="12dp"
                            android:layout_marginLeft="3dp"
                            android:layout_height="4dp"
                            android:scaleType="fitXY"
                            android:src="@mipmap/down_white"></ImageView>

                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_width="1dp"
                        android:background="@color/white"
                        android:layout_height="20dp">
                    </RelativeLayout>
                </RelativeLayout>


                <RelativeLayout
                    android:background="@color/green"
                    android:layout_width="fill_parent"
                    android:layout_weight="1"
                    android:layout_height="50dp">

                    <RelativeLayout
                        android:layout_centerInParent="true"
                        android:background="@color/green"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp">

                        <TextView
                            android:id="@+id/house_fitle_beds_title"
                            android:layout_width="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_height="wrap_content"
                            android:text="卧室"
                            android:textColor="@color/white"
                            android:layout_centerHorizontal="true"
                            android:textSize="12dp"
                            />

                        <ImageView
                            android:layout_marginTop="15dp"
                            android:id="@+id/house_fitle_beds_img"
                            android:layout_toRightOf="@+id/house_fitle_beds_title"
                            android:layout_centerVertical="true"
                            android:layout_width="12dp"
                            android:layout_marginLeft="3dp"
                            android:layout_height="4dp"
                            android:scaleType="fitXY"
                            android:src="@mipmap/down_white"></ImageView>

                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_width="1dp"
                        android:background="@color/white"
                        android:layout_height="20dp">
                    </RelativeLayout>
                </RelativeLayout>


                <RelativeLayout
                    android:background="@color/green"
                    android:layout_width="fill_parent"
                    android:layout_weight="1"
                    android:layout_height="50dp">

                    <RelativeLayout
                        android:layout_centerInParent="true"
                        android:background="@color/green"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp">

                        <TextView
                            android:id="@+id/house_fitle_more_title"
                            android:layout_width="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_height="wrap_content"
                            android:text="更多"
                            android:textColor="@color/white"
                            android:layout_centerHorizontal="true"
                            android:textSize="12dp"
                            />

                        <ImageView
                            android:layout_marginTop="15dp"
                            android:id="@+id/house_fitle_more_img"
                            android:layout_toRightOf="@+id/house_fitle_more_title"
                            android:layout_centerVertical="true"
                            android:layout_width="12dp"
                            android:layout_marginLeft="3dp"
                            android:layout_height="4dp"
                            android:scaleType="fitXY"
                            android:src="@mipmap/down_white"></ImageView>

                    </RelativeLayout>
                </RelativeLayout>

            </LinearLayout>

            <RelativeLayout
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:background="@color/home_bar_text_normal"
                android:layout_height="1dp">
            </RelativeLayout>
        </LinearLayout>


        <RelativeLayout
            android:layout_marginTop="100dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <android.support.v4.widget.SwipeRefreshLayout
                android:id="@+id/main_srl"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <android.support.v7.widget.RecyclerView
                    android:id="@+id/main_lv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>


            </android.support.v4.widget.SwipeRefreshLayout>

            <RelativeLayout
                android:id="@+id/sortBtn"
                android:layout_marginBottom="50dp"
                android:layout_marginRight="20dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:background="@drawable/corners_haf"
                android:orientation="vertical"
                android:layout_width="60dp"
                android:layout_height="60dp">
                <ImageView
                    android:layout_marginTop="15dp"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentTop="true"
                    android:src="@drawable/sort"
                    android:layout_width="20dp"
                    android:layout_height="20dp" />
                <TextView
                    android:layout_marginTop="35dp"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentTop="true"
                    android:text="Sort"
                    android:id="@+id/sort_text"
                    android:textSize="10dp"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>



            <RelativeLayout
                android:id="@+id/myloading"
                android:visibility="invisible"
                android:layout_alignParentBottom="true"
                android:background="#f2f2f2"
                android:layout_width="match_parent"
                android:layout_height="44dp">
                <TextView
                    android:id="@+id/myloadingText"
                    android:textColor="@color/black"
                    android:text="loading...."
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
        </RelativeLayout>



        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/bgView"
            android:visibility="invisible"
            android:layout_marginTop="100dp"
            android:background="#50000000"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></LinearLayout>

        <LinearLayout
            android:id="@+id/typeView"
            android:orientation="vertical"
            android:layout_marginTop="100dp"
            android:visibility="invisible"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="300dp">

            <net.lhh.apst.fragments.TypeFilterView
                android:id="@+id/typeViewIn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>



        <LinearLayout
            android:id="@+id/priceView"
            android:orientation="vertical"
            android:layout_marginTop="100dp"
            android:visibility="invisible"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="250dp">

            <net.lhh.apst.fragments.PriceFilterView
                android:id="@+id/priceViewIn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/areaView"
            android:orientation="vertical"
            android:layout_marginTop="100dp"
            android:visibility="invisible"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="250dp">

            <net.lhh.apst.fragments.AreaFilterView
                android:id="@+id/areaViewIn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/bedsView"
            android:orientation="vertical"
            android:layout_marginTop="100dp"
            android:visibility="invisible"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="300dp">

            <net.lhh.apst.fragments.BedsFilterView
                android:id="@+id/bedsViewIn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>



        <LinearLayout
            android:id="@+id/moreView"
            android:orientation="vertical"
            android:layout_marginTop="100dp"
            android:visibility="invisible"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <net.lhh.apst.fragments.MoreFilterView
                android:id="@+id/moreViewIn"
                android:layout_marginBottom="44dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>


        <LinearLayout

            android:id="@+id/comView"
            android:orientation="vertical"
            android:layout_marginTop="54dp"
            android:visibility="invisible"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


        </LinearLayout>

    </FrameLayout>
</LinearLayout>