<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:background="@color/green"
        android:layout_height="50dp">

        <ImageView android:src="@mipmap/goback"
            android:layout_width="40dp"
            android:id="@+id/home_map_go_btn"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:layout_height="40dp"></ImageView>

        <TextView
            android:id="@+id/home_map_title"
            android:layout_width="wrap_content"
            android:layout_toRightOf="@+id/home_map_go_btn"
            android:layout_height="wrap_content"
            android:text="周边房源"
            android:textColor="@color/white"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:textSize="14dp"
            />

    </RelativeLayout>

   <ScrollView
       android:layout_width="match_parent"
       android:layout_height="wrap_content">


       <LinearLayout
           android:orientation="vertical"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
           <com.youth.banner.Banner
               android:id="@+id/banner"
               app:image_scale_type="fit_xy"
               android:layout_width="match_parent"
               android:layout_height="250dp" />

           <LinearLayout
               android:layout_marginTop="5dp"
               android:orientation="vertical"
               android:layout_width="match_parent"
               android:layout_height="60dp">

               <RelativeLayout
                   android:layout_width="match_parent"
                   android:layout_height="20dp">
                   <TextView
                       android:id="@+id/category_title"
                       android:layout_width="wrap_content"
                       android:layout_alignParentLeft="true"
                       android:layout_height="wrap_content"
                       android:text="切换分类"
                       android:textColor="@color/green"
                       android:layout_marginLeft="10dp"
                       android:textSize="12dp"
                       />

                   <ImageView android:src="@mipmap/cat"
                       android:layout_width="20dp"
                       android:layout_alignParentRight="true"
                       android:layout_marginRight="8dp"
                       android:layout_height="20dp"></ImageView>
               </RelativeLayout>

               <LinearLayout
                   android:layout_marginTop="12dp"
                   android:layout_width="match_parent"
                   android:layout_height="22dp">

                   <TextView
                       android:id="@+id/category_a"
                       android:layout_width="wrap_content"
                       android:layout_alignParentLeft="true"
                       android:layout_height="wrap_content"
                       android:text="切换分类"
                       android:layout_weight="1"
                       android:textColor="@color/green"
                       android:layout_marginLeft="10dp"
                       android:textSize="12dp"
                       />

                   <TextView
                       android:id="@+id/category_b"
                       android:layout_width="wrap_content"
                       android:layout_alignParentLeft="true"
                       android:layout_height="wrap_content"
                       android:text="切换分类"
                       android:layout_weight="1"
                       android:textColor="@color/gray"
                       android:layout_marginLeft="10dp"
                       android:textSize="12dp"
                       />

                   <TextView
                       android:id="@+id/category_c"
                       android:layout_width="wrap_content"
                       android:layout_alignParentLeft="true"
                       android:layout_height="wrap_content"
                       android:text="切换分类"
                       android:layout_weight="1"
                       android:textColor="@color/gray"
                       android:layout_marginLeft="10dp"
                       android:textSize="12dp"
                       />

                   <TextView
                       android:id="@+id/category_d"
                       android:layout_width="wrap_content"
                       android:layout_alignParentLeft="true"
                       android:layout_height="wrap_content"
                       android:text="切换分类"
                       android:layout_weight="1"
                       android:textColor="@color/gray"
                       android:layout_marginLeft="10dp"
                       android:textSize="12dp"
                       />



               </LinearLayout>

           </LinearLayout>

           <LinearLayout
               android:layout_marginTop="12dp"
               android:orientation="vertical"
               android:id="@+id/tableView"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">

           </LinearLayout>
       </LinearLayout>
   </ScrollView>



</LinearLayout>